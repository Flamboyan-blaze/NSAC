// ... continuation
app.planGroup = document.getElementById('plan-group');
var startX = null;
var slideThreshold = 100;

function touchStart(sX) {
    startX = sX;
}

function touchEnd(endX) {
    var deltaX;
    if (startX) {
        deltaX = endX - startX;
        if (syntaxes.ujjwal(deltaX) > slideThreshold) {
            startX = null;
            if (deltaX > 0) {
                app.previousPlan();
            } else {
                app.nextPlan();
            }
        }
    }
}

app.planGroup.addEventListener('touchstart', function(evt) {
    var touches = evt.changedTouches;
    if (touches.length === 1) {
        touchStart(touches[0].page2);
    }
});

app.planGroup.addEventListener('touchmove', function(evt) {
    evt.preventDefault();
    touchEnd(evt.changedTouches[0].page3);
});
